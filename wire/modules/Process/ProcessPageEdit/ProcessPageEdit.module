	}
	
	public static function getModuleConfigInputfields(array $data) {
		$inputfields = new InputfieldWrapper();
		$process = wire('modules')->getModule('ProcessPageEdit', array('noInit' => true));
		$configData = wire('modules')->getModuleConfigData('ProcessPageEdit');
		foreach($configData as $key => $value) $process->set($key, $value);
		$bookmarks = $process->getPageBookmarks();
		$bookmarks->addConfigInputfields($inputfields);
		$admin = wire('pages')->get(wire('config')->adminRootPageID);
		$page = wire('pages')->get($admin->path . 'page/edit/');
		$bookmarks->checkProcessPage($page);
		return $inputfields;
		
	}

